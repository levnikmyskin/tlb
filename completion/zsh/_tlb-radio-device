local -a args reply
args=(
    # Command word.  Don't care what that is.
    /$'[^\0]#\0'/
)

_regex_words commands "$service command" \
    'on:Switch device on' \
    'off:Switch device off' \
    'toggle:Toggle device state'
args+=("$reply[@]")

_regex_arguments _tlp-radio-device "$args[@]"
_tlp-radio-device "$@"
